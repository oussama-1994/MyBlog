{% extends 'base.html.twig' %}
{% block body %}
    <h1>Inscription sur le Blog</h1>
    {{ form_start(form) }}
    {{ form_row(form.email,{'attr':{'placeholder':'Adresse email...'}}) }}
    {{ form_row(form.username,{'label':'Nom d\'utlilisateur','attr':{'placeholder':'username'}}) }}
    {{ form_row(form.password,{'attr':{'placeholder':'mot de passe '}}) }}
    {{ form_row(form.confirm_password,{'attr':{'placeholder':'repeter le mot de passe'}}) }}
    <button type="submit" class="btn btn-success">Inscription</button>

    {{ form_end(form) }}




{% endblock %}